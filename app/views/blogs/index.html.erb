<h1>All Blogs</h1>
<% @blogs.each do |blog| %>
  <div>
    <h2><%= link_to blog.title, blog %></h2>
    <p><%= blog.body %></p>
    <%= link_to "Edit", edit_blog_path(blog) %>
    <%= link_to "Delete", blog, method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
<br>
<%= link_to "New Blog", new_blog_path %>
